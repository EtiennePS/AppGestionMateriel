<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ajoutinterface.AjoutInterfaceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nomajoutinterface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:text="Nom Interface"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/typeajoutinterface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp" />

        <TextView
            android:id="@+id/macajoutinterface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:text="Mac"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ipv4ajoutinterface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:text="IPV4"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ipv6ajoutinterface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:text="IPV6"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/masqueajoutinterface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:text="Masque"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/affectationajoutinterface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp" />

        <Button
            android:id="@+id/ajoutinterface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ajouter" />
    </LinearLayout>

</LinearLayout>